<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="#ED0B2233">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/fotosaya"
            android:layout_gravity="center"
            app:civ_border_color="@color/teal_700"
            app:civ_border_width="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Muhammad Hilman Rahmat"
            android:layout_gravity="center"
            android:fontFamily="@font/lilitaoneregular"
            android:textColor="@color/underline"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:src="@drawable/indonesia"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDONESIA"
                android:textSize="8sp"
                android:textColor="@color/underline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56kg"
                android:paddingEnd="10dp"
                android:textColor="@color/underline"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:background="@color/underline"/>
            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170cm"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/underline"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:background="@color/underline"/>
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20y.o"
                android:paddingStart="10dp"
                android:textColor="@color/underline"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="10sp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:textColor="@color/underline"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="10sp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:textColor="@color/underline"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="10sp"
                android:paddingEnd="10sp"
                android:layout_gravity="center"
                android:textColor="@color/underline"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/underline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="INTEREST"
            android:textSize="32sp"
            android:fontFamily="@font/icelandregular"
            android:textColor="@color/underline"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                android:layout_marginEnd="68dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Futsal"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/futsal"
                    android:layout_gravity="center" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hiking"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/hiking"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="4dp"
                android:layout_marginEnd="68dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="History"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/knight"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Poetry"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/poetrydua"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="4dp"
                android:layout_marginEnd="68dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ping-pong"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/pingpong"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/teal_700"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Language"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/icelandregular"
                    android:textStyle="bold"
                    android:textColor="@color/underline"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/languages"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/underline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Sebuah Cerita"
            android:fontFamily="@font/icelandregular"
            android:textSize="32sp"
            android:textColor="@color/underline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Pada tanggal 17 Juli 2002 dini hari lahirlah seorang pria bernama Muhammad Hilman Rahmat. Pria tangguh bak mempunyai cita-cita yang mulia. 'Menjadi orang paling bahagia' Pria tersebut bilang"
            android:fontFamily="@font/icelandregular"
            android:textSize="20sp"
            android:textColor="@color/underline"
            android:textAlignment="center"/>

    </LinearLayout>

</ScrollView>